# Terraform variables for jambonz medium cluster deployment on GCP

# ==============================================================================
# REQUIRED - You MUST provide values for these variables
# ==============================================================================

project_id     = ""  # Your GCP project ID (e.g., "my-gcp-project")
url_portal     = ""  # Your domain name (e.g., "jambonz.example.com")
region         = ""  # GCP region (e.g., "us-west1", "us-east1", "europe-west1")
zone           = ""  # GCP zone (e.g., "us-west1-a", "us-east1-b", "europe-west1-c")
ssh_public_key = ""  # Your SSH public key (e.g., "ssh-rsa AAAAB3Nz... user@host")

# Set to false to disable if not needed
enable_pcaps             = true
deploy_recording_cluster = true

# ------------------------------------------------------------------------------
# APIBAN CONFIGURATION (optional)
# Get a free key at https://apiban.org/getkey.html
# ------------------------------------------------------------------------------

# Single key mode (simpler):
# apiban_key = "YOUR_APIBAN_KEY"

# OR multi-key mode (auto-provisions unique key per instance):
# apiban_client_id     = "YOUR_CLIENT_ID"
# apiban_client_secret = "YOUR_CLIENT_SECRET"

# ==============================================================================
# OPTIONAL - The defaults below work for most deployments
# ==============================================================================

# ------------------------------------------------------------------------------
# DEPLOYMENT CONFIGURATION
# ------------------------------------------------------------------------------

name_prefix = "jambonz"
environment = "production"

# ------------------------------------------------------------------------------
# NETWORK CONFIGURATION
# ------------------------------------------------------------------------------

vpc_cidr           = "172.20.0.0/16"
public_subnet_cidr = "172.20.10.0/24"

# ------------------------------------------------------------------------------
# NETWORK ACCESS CONTROLS
# ------------------------------------------------------------------------------

allowed_ssh_cidr  = ["0.0.0.0/0"]
allowed_http_cidr = ["0.0.0.0/0"]
allowed_sbc_cidr  = ["0.0.0.0/0"]

# ------------------------------------------------------------------------------
# IMAGE CONFIGURATION
# ------------------------------------------------------------------------------

# Public jambonz images from drachtio-cpaas project
feature_server_image = "projects/drachtio-cpaas/global/images/jambonz-fs-v10-0-4-debian-12-20260208163010"
sbc_image            = "projects/drachtio-cpaas/global/images/jambonz-sip-rtp-v10-0-4-debian-12-20260204151605"
web_monitoring_image = "projects/drachtio-cpaas/global/images/jambonz-web-monitoring-v10-0-4-debian-12-20260204151711"
recording_image      = "projects/drachtio-cpaas/global/images/jambonz-recording-v10-0-4-debian-12-20260204152210"

# ------------------------------------------------------------------------------
# MACHINE TYPE CONFIGURATION
# ------------------------------------------------------------------------------

sbc_machine_type            = "e2-standard-4"
feature_server_machine_type = "e2-standard-4"
web_monitoring_machine_type = "e2-standard-4"
recording_machine_type      = "e2-standard-2"

web_monitoring_disk_size = 200

# ------------------------------------------------------------------------------
# SBC CONFIGURATION
# ------------------------------------------------------------------------------

sbc_count = 1

# ------------------------------------------------------------------------------
# MANAGED INSTANCE GROUP CONFIGURATION
# ------------------------------------------------------------------------------

feature_server_target_size  = 1
feature_server_min_replicas = 1
feature_server_max_replicas = 3

recording_target_size  = 1
recording_min_replicas = 1
recording_max_replicas = 3

# Graceful scale-in timeout (max 900 seconds / 15 minutes)
scale_in_timeout_seconds = 900

# ------------------------------------------------------------------------------
# SSH CONFIGURATION
# ------------------------------------------------------------------------------

ssh_user = "jambonz"

# ------------------------------------------------------------------------------
# DATABASE CONFIGURATION
# ------------------------------------------------------------------------------

mysql_tier      = "db-custom-2-4096"
mysql_disk_size = 20

# ------------------------------------------------------------------------------
# REDIS CONFIGURATION (Memorystore)
# No AUTH, no TLS - simple configuration
# ------------------------------------------------------------------------------

redis_memory_size_gb = 1
redis_tier           = "BASIC"
