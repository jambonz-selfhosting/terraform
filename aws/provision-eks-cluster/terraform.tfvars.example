# =============================================================================
# AWS EKS Cluster Configuration Example
# Copy this file to terraform.tfvars and customize as needed
# =============================================================================

# AWS Region
region = "us-east-1"

# Basic Configuration
name_prefix  = "jambonz"
cluster_name = "voip-eks-cluster"

# VPC Configuration
vpc_cidr = "10.0.0.0/16"

# Kubernetes Version (optional - defaults to latest)
# kubernetes_version = "1.29"

# Cluster Logging (optional)
# cluster_log_types = ["api", "audit", "authenticator", "controllerManager", "scheduler"]

# System Node Pool (general workloads, Kubernetes system components)
# Uses private subnets with NAT Gateway for egress
system_instance_type = "t3.medium"
system_node_count    = 2
system_min_count     = 1
system_max_count     = 4
system_disk_size     = 50

# SIP Node Pool (SIP signaling - drachtio-server)
# Uses public subnets - nodes get public IPs for VoIP traffic
sip_instance_type = "t3.medium"
sip_node_count    = 1
sip_min_count     = 1
sip_max_count     = 3
sip_disk_size     = 50

# RTP Node Pool (RTP media - rtpengine, freeswitch)
# Uses public subnets - nodes get public IPs for VoIP traffic
rtp_instance_type = "t3.medium"
rtp_node_count    = 1
rtp_min_count     = 1
rtp_max_count     = 3
rtp_disk_size     = 50

# Security Configuration
# Restrict SSH access to your IP/network for production
allowed_ssh_cidr  = "0.0.0.0/0"   # Change to your IP, e.g., "203.0.113.0/24"
allowed_http_cidr = "0.0.0.0/0"   # Change to restrict web access if needed
